@model KaraKita.Models.AnasayfaModel
@{
    ViewBag.Title = "Home Page";
}
@section Css{
    <link rel="stylesheet" type="text/css" href="~/css/slick.css" />
}
<div class="container-fluid animate pagewrapper">
    <!--homeSlider-->
    <div class="container-fluid section mainSlide">
        <div class="homeSlider">
            <!--slide-->
            <div class="slide" data-mobile="../../images/slider/slider01_m.jpg" data-desktop="../../images/slider/slider01.jpg">
                <div class="textcontainer">
                    <div class="container-fluid container">
                        <div class="row middle-xs start-lg start-md center-sm center-xs">
                            <div class="col-lg-8 col-md-8 col-sm-12 ">
                                <h2>Kara Kıta Organizyon</h2>
                                <h3>Uluslararası Organizasyon<br>Kuruluşudur</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="cropcontainer" style=" background-image: url(../../images/slider/slider01.jpg)"></div>
            </div>
            <!--/slide-->
        </div>
        <div class="slickDots"></div>
    </div>
    <!--/homeSlider-->
    <!--section-->
    <div class="container-fluid section">
        <div class="container-fluid container">
            <div class="row center-xs">
                <div class="col-lg col-md col-sm-3 col-xs-4">
                    <div class="iconBox">
                        <a href="#">
                            <span class="icon"><img src="~/images/icon01.png" height="110" width="110" /></span>
                            <span class="text">ACİL YARDIM</span>
                        </a>
                    </div>
                </div>
                <div class="col-lg col-md col-sm-3 col-xs-4">
                    <div class="iconBox">
                        <a href="#">
                            <span class="icon"><img src="~/images/icon02.png" height="110" width="110" /></span>
                            <span class="text">YETİM</span>
                        </a>
                    </div>
                </div>
                <div class="col-lg col-md col-sm-3 col-xs-4">
                    <div class="iconBox">
                        <a href="#">
                            <span class="icon"><img src="~/images/icon03.png" height="110" width="110" /></span>
                            <span class="text">EĞİTİM</span>
                        </a>
                    </div>
                </div>
                <div class="col-lg col-md col-sm-3 col-xs-4">
                    <div class="iconBox">
                        <a href="#">
                            <span class="icon"><img src="~/images/icon04.png" height="110" width="110" /></span>
                            <span class="text">KURBAN</span>
                        </a>
                    </div>
                </div>
                <div class="col-lg col-md col-sm-3 col-xs-4">
                    <div class="iconBox">
                        <a href="#">
                            <span class="icon"><img src="~/images/icon05.png" height="110" width="110" /></span>
                            <span class="text">SU KUYUSU</span>
                        </a>
                    </div>
                </div>
                <div class="col-lg col-md col-sm-3 col-xs-4">
                    <div class="iconBox">
                        <a href="#">
                            <span class="icon"><img src="~/images/icon06.png" height="110" width="110" /></span>
                            <span class="text">SAĞLIK</span>
                        </a>
                    </div>
                </div>
                <div class="col-lg col-md col-sm-3 col-xs">
                    <div class="iconBox">
                        <a href="#">
                            <span class="icon"><img src="~/images/icon07.png" height="110" width="110" /></span>
                            <span class="text">SÜRDÜRÜLEBİLİR KALKINMA</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/section-->
    <!--section-->
    <div class="container-fluid section grey">
        <div class="container-fluid container">
            <div class="row center-xs">
                <div class="col-lg-10 col-md-11 col-sm-12 col-xs-12">
                    <h2>Projelerimiz</h2>
                    <div class="wave-line wave-center"></div>
                    <p>Kara Kıta ekibi, saha deneyimini ve birikimini profesyonel şekilde, zaman takvimine, faydalanıcı sayısına ve proje kapmasına sadık kalarak öngörülen zaman, yer ve tarihte gerçekleştirmeyi ilke edinmiş bir ekiptir.</p>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-xs sliderBox">
                    <div class="row projectSlide">
                        <!--item-->
                        @foreach (var item in Model.Projeler)
                        {
                        <div class="col-xs slide">
                            <div class="contentBox">
                                <span class="Image">
                                    <img src="../../images/@item.ResimYolu" style="max-height:250px!important;max-width:370px!important;" height="300" width="370" />

                                </span>
                                <span class="Text">
                                    <h3>@item.Ad</h3>
                                    @if (item.Aciklama.Length < 50)
                                    {
                                        <p>@item.Aciklama</p>

                                    }
                                    else
                                    {
                                        <p>@item.Aciklama.Substring(50)...</p>

                                    }
                                    <a href="@Url.Action("ProjeDetayı","Home",new { projeId=item.Id})">Devamı</a>
                                </span>
                            </div>
                        </div>
                        }
                        
                        <!--/item-->
                    </div>
                    <a href="#" class="Prev">GERİ</a>
                    <a href="#" class="Next">İLERİ</a>
                </div>
            </div>
            <div class="row mt-3 center-xs">
                <div class="allbuton">
                    <a href="@Url.Action("Projelerimiz","Home")">TÜM PROJELER</a>
                </div>
            </div>
        </div>
    </div>
    <!--/section-->
    <!--section-->
    <div class="container-fluid section karakita">
        <div class="container-fluid container">
            <div class="row center-xs">
                <div class="col-xs-10">
                    <h2>Neden Kara Kıta?</h2>
                    <p>Kara Kıta STK'lar adına birçok alanda saha faaliyeti yürütme konumunda olan bir ticari müessesedir.</p>
                </div>
            </div>
            <div class="row mt-1 center-xs">
                <div class="allbuton">
                    <a href="neden-kara-kita.html">Devamı</a>
                </div>
            </div>
        </div>
    </div>
    <!--/section-->
    <!--section-->
    <div class="container-fluid section">
        <div class="container-fluid container">
            <div class="row center-xs">
                <div class="col-xs-10">
                    <h2>Galeri</h2>
                    <div class="wave-line wave-center"></div>
                    <p>Gerçekleştirdiğimiz faaliyetlerden...</p>
                </div>
            </div>
            <div class="row mt-1">
                @foreach (var item in Model.Resimler)
                {
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                        <div class="contentBox">
                            <a href="~/images/galeri/proje03_b.jpg" class="gallery" data-fancybox="gallery">
                                <img src="~/images/@item.DosyaYolu" height="300" width="370" />
                            </a>
                        </div>
                    </div>
                }
                
            </div>
            <div class="row mt-3 center-xs">
                <div class="allbuton">
                    <a href="@Url.Action("Projelerimiz","Home")">TÜM GALERİ</a>
                </div>
            </div>
        </div>
    </div>
    <!--/section-->
</div>
@section Scripts{
    <script src="~/js/slick.min.js"></script>
    <script type="text/javascript" src="~/js/home.js"></script>
}
